{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Welcome9",
    "definitions": {
        "Welcome9": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "metadata": {
                    "$ref": "#/definitions/Metadata"
                },
                "hazards": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/Hazard"
                    }
                }
            },
            "required": [
                "hazards",
                "metadata"
            ],
            "title": "Welcome9"
        },
        "Hazard": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "number",
                    "unique": true,
                    "minimum": 1
                  },
                "name": {
                    "type": "string"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Resource"
                    }
                },
                "directionStatement": {
                    "type": "string"
                },
                "directionConfidence": {
                    "type": "string"
                },
                "magnitudeConfidence": {
                    "type": "string"
                },
                "impactStatement": {
                    "$ref": "#/definitions/ImpactStatement"
                },
                "notes": {
                    "type": "string"
                }
            },
            "required": [
                "directionConfidence",
                "directionStatement",
                "id",
                "impactStatement",
                "magnitudeConfidence",
                "name",
                "notes",
                "resources"
            ],
            "title": "Hazard"
        },
        "ImpactStatement": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "building": {
                    "type": "string"
                },
                "contaminatedSites": {
                    "type": "string"
                }
            },
            "required": [
                "building",
                "contaminatedSites"
            ],
            "title": "ImpactStatement"
        },
        "Resource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string",
                    "format": "integer"
                },
                "name": {
                    "type": "string"
                },
                "properties": {
                    "$ref": "#/definitions/Properties"
                }
            },
            "required": [
                "id",
                "name",
                "properties"
            ],
            "title": "Resource"
        },
        "Properties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "source": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ],
                    "qt-uri-extensions": [
                        ".php"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "var": {
                    "type": "string"
                },
                "group": {
                    "type": "string"
                },
                "season": {
                    "type": "string"
                },
                "units": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "source",
                "type",
                "url"
            ],
            "title": "Properties"
        },
        "Metadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "application": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "modifiedTime": {
                    "type": "string",
                    "format": "date-time"
                },
                "modifiedBy": {
                    "type": "string"
                },
                "modifiedByEmail": {
                    "type": "string"
                }
            },
            "required": [
                "application",
                "description",
                "modifiedBy",
                "modifiedByEmail",
                "modifiedTime",
                "name",
                "version"
            ],
            "title": "Metadata"
        }
    }
}
